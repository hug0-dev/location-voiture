{% extends 'base.html.twig' %}

{% block title %}Vehicules{% endblock %}

{% block body %}
    <h1>Vehicules</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ vehicule.immatriculation }}</td>
            </tr>
            <tr>
                <th>Prix journalier €</th>
                <td>{{ vehicule.prixJournalier }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ vehicule.statutDisponibilite }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ vehicule.commentaire }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ vehicule.note }}</td>
            </tr>
        </tbody>
    </table>

    {% if app.user %}
        <a href="{{ path('app_vehicules_index') }}">Retour liste véhicule</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_vehicules_edit', {'id': vehicule.id}) }}">Modifier</a>
        {{ include('vehicules/_delete_form.html.twig') }}
    {% endif %}
    {% else %}  
        <a href="{{ path('app_home') }}">Retour</a>
    {% endif %}

{% endblock %}
